{
  "name": "helm-charts",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/mpriscella/features/helm-chart-testing:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "go install github.com/norwoodj/helm-docs/cmd/helm-docs@latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "EditorConfig.EditorConfig",
        "GitHub.vscode-github-actions",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.kube,target=/home/vscode/.kube,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "runArgs": [
    "--userns=keep-id"
  ],
  "hostRequirements": {
    "cpus": 2,
    "memory": "2gb"
  },
  "containerEnv": {
    "HOME": "/home/vscode"
  }
}
